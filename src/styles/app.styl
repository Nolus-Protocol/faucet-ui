.rc-anchor-light.rc-anchor-normal {
  width 800px!important
}


.g-recaptcha {
    transform:scale(0.77);
    transform-origin:0 0;
}

.section-header {
  background-color: #fff;
  width: 515px;

  border-top: 1px solid #EBEFF5;
  border-left: 1px solid #EBEFF5;
  border-right: 1px solid #EBEFF5;

  border-radius: 12px 12px 0 0;

  //box-shadow: 0px 12px 32px rgba(7, 45, 99, 0.06);
}

.section-header h1 {
  font-size: 32px;
  font-family: "Garet";
  text-align: center;
  letter-spacing: -0.03em;
  padding: 24px 0;
  font-weight: 700;
  line-height: 41px;
}

.separator-line {
  background: #EBEFF5;
  width: 100%;
  height: 1px;
}

.section-header p {
  color: #082D63;
  font-family: "Garet";
  font-weight: 400;
  font-size: 14px;
  line-height: 20px;
  padding: 24px 40px 0 40px;
    
  @media screen and (max-width: 768px){
    padding: 24px 24px 0 24px;
  }
}

.ni-form-group {
  background-color: #fff;
  width: 515px;
  padding: 0 40px;

  @media screen and (max-width: 768px){
    padding: 0 24px;
  }

  border-left: 1px solid #EBEFF5;
  border-right: 1px solid #EBEFF5;
}

.ni-form-group:nth-child(1) {
  padding-top: 36px;
}

.ni-form-group:nth-child(2) {
  padding-top: 16px;
}

.ni-form-group:nth-child(3) {
  padding-top: 32px;
  padding-bottom: 40px

  border-radius: 0 0 12px 12px;
}

.ni-form-group:last-child {
  border-bottom: 1px solid #EBEFF5;
}